<Window x:Class="Restaurant_Cocineros.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LoginView" 
        Height="600" 
        Width="400"
        Background="#FEF0D7"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">

    <Window.Resources>
        <!-- Estilo para TextBox con icono -->
        <Style x:Key="IconTextBoxStyle" TargetType="TextBox">
            <Setter Property="Width" Value="250"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="CaretBrush" Value="Black"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="35"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                </Grid.ColumnDefinitions>

                                <Image x:Name="Icon" 
                                       Grid.Column="0"
                                       Width="20" 
                                       Height="20" 
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>

                                <ScrollViewer x:Name="PART_ContentHost" 
                                              Grid.Column="1"
                                              Margin="5,0,0,0"
                                              VerticalAlignment="Center"
                                              HorizontalScrollBarVisibility="Hidden"
                                              VerticalScrollBarVisibility="Hidden"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Tag" Value="Usuario">
                                <Setter TargetName="Icon" Property="Source" Value="/Assets/avatar.png"/>
                            </Trigger>
                            <Trigger Property="Tag" Value="Password">
                                <Setter TargetName="Icon" Property="Source" Value="/Assets/contraseña.png"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para PasswordBox con icono -->
        <Style x:Key="IconPasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Width" Value="250"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="35"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                </Grid.ColumnDefinitions>

                                <Image Source="/Assets/contraseña.png" 
                                       Grid.Column="0"
                                       Width="20" 
                                       Height="20" 
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>

                                <ScrollViewer x:Name="PART_ContentHost" 
                                              Grid.Column="1"
                                              Margin="5,0,0,0"
                                              VerticalAlignment="Center"
                                              HorizontalScrollBarVisibility="Hidden"
                                              VerticalScrollBarVisibility="Hidden"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para labels -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <!-- Estilo para botón -->
        <Style x:Key="LoginButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#E06734"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="20"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E43F28"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#C8351F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <StackPanel HorizontalAlignment="Center" 
                    VerticalAlignment="Center">

            <!-- Logo -->
            <Image Source="/Assets/logorestaurante2.png" 
                   Width="310" 
                   Height="230" 
                   Margin="0,0,0,20"/>

            <!-- Formulario -->
            <StackPanel HorizontalAlignment="Center">

                <!-- Campo Usuario -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Usuario:" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="txtUsuario"
                             Style="{StaticResource IconTextBoxStyle}"
                             Tag="Usuario"/>
                </StackPanel>

                <!-- Campo Contraseña -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Contraseña:" Style="{StaticResource LabelStyle}"/>
                    <PasswordBox x:Name="pswUsuario"
                                 Style="{StaticResource IconPasswordBoxStyle}"/>
                </StackPanel>

                <!-- Botón -->
                <Button x:Name="btnLogin"
                        Content="Iniciar sesión"
                        Style="{StaticResource LoginButtonStyle}"/>

            </StackPanel>
        </StackPanel>
    </Grid>
</Window>